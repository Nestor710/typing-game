            <h1 class="text-sm">
                Time
            </h1>
        </div>
        <button class="time-btn" value="15" id="15sec">15</button>
        <button class="time-btn" value="30" id="30sec">30</button>
        <button class="time-btn" value="60" id="60sec">60</button>
        <button class="time-btn" value="120" id="120sec">120</button>
    </div>
</div>

